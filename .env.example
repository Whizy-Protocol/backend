# =============================================================================
# WHIZY HEDERA TESTNET PREDICTION MARKET - ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Single database used by both indexer and backend for real-time sync
# Must match the dbName in ../indexer/config.yaml
DATABASE_URL=

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=3002

RUST_LOG=info

CORS_ORIGIN=*

# =============================================================================
# AUTHENTICATION
# =============================================================================
API_KEY=
JWT_SECRET=your_jwt_secret_key_here

# =============================================================================
# EXTERNAL APIS
# =============================================================================
ADJACENT_API_KEY=
ADJACENT_API_BASE_URL=

PEXELS_API_KEY=

# =============================================================================
# HEDERA SEPOLIA TESTNET BLOCKCHAIN CONFIGURATION
# =============================================================================
PRIVATE_KEY=

HEDERA_RPC_URL=https://testnet.hashio.io/api
HEDERA_CHAIN_ID=296
HEDERA_EXPLORER=https://hashscan.io/testnet

# Contract Addresses (must match ../indexer/networks.json)
WHIZY_PREDICTION_MARKET_ADDR=
PROTOCOL_SELECTOR_ADDR=

# =============================================================================
# SEEDING (Optional)
# =============================================================================
RUN_SEEDS=false
SEED_MARKET_COUNT=10

# =============================================================================
# SCHEDULER CONFIGURATION
# =============================================================================
# Enable background processing scheduler
ENABLE_SCHEDULER=true
# Processing interval (in seconds)
SCHEDULER_INTERVAL_SECS=300

# =============================================================================
# CONTRACT ADDRESSES (HEDERA Testsnet)
# =============================================================================
USDC_ADDRESS=
ACCESS_CONTROL_ADDRESS=

# Protocol Adapters
AAVE_ADAPTER_ADDRESS=
COMPOUND_ADAPTER_ADDRESS=
MORPHO_ADAPTER_ADDRESS=

# Protocol Forks
AAVE_FORK_ADDRESS=
COMPOUND_FORK_ADDRESS=
MORPHO_FORK_ADDRESS=
